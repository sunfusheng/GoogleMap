<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_item_margin_top_bottom"
        android:layout_marginLeft="@dimen/list_item_margin_left_right"
        android:layout_marginTop="@dimen/list_item_margin_top_bottom"
        android:text="child item"
        android:textColor="@color/font1"
        android:textSize="16sp"/>

    <View
        android:id="@+id/divider"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider2"/>
</LinearLayout>


